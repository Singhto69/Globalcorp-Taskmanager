<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="StartFragment"
            type="com.globalcorp.taskman.StartFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StartFragment">


        <Button
            android:id="@+id/startToMissionButton"
            android:layout_width="152dp"
            android:layout_height="54dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"


            android:text="@string/start_to_mission_button_text"


            app:layout_constraintBottom_toTopOf="@+id/startToKittensFragmentButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startToKittensFragmentButton"
            android:layout_width="152dp"
            android:layout_height="54dp"
            android:layout_marginStart="50dp"
            android:text="@string/start_to_kittens_button_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startToMissionButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>