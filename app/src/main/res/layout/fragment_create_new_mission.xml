<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_new_mission_textInputLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_new_mission_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_new_mission_title_input_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_new_mission_textInputLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_new_mission_location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_new_mission_location_input_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_new_mission_textInputLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_new_mission_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_new_mission_description_input_text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/create_new_mission_textInputLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/create_new_mission_type_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/create_new_mission_type_input_text" />

    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>
